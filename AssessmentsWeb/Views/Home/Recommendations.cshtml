@inherits System.Web.Mvc.WebViewPage


<div class="mainDiv" ng-app="Assessments" ng-controller="RecommendationsController">
    <ul class="list-unstyled list-inline">
        <li>
            <a class=" btn btn-primary" ng-controller="AddRecommendationController"
               ng-click="startForm(null, currentId)" title="Recomendation">
                <span class="glyphicon glyphicon-plus"></span> Add Recommendation 
            </a>
        </li>
        <li>
            <h3 class="col-lg-12" ng-show="Assessment.length">{{Assessment}}</h3>
        </li>
    </ul>
    <div ng-show="Recommendations.length">
        <table class="tableSS">
            <thead>
                <tr>
                    <th>Criterion</th>
                    <th>Text</th>
                    <th>Benefits</th>
                </tr>
            </thead>
            <tbody ng-repeat="a in Recommendations">
                <tr>
                    <td class="col-lg-2">
                        {{a.Name}}
                    </td>
                    <td class="col-lg-4">
                        <textarea ng-model="a.Text" ng-blur="Update(a)" class="form-control noborder">{{a.Text}}</textarea>
                    </td>
                    <td class="col-lg-4">
                        <textarea ng-model="a.Benefits" ng-blur="Update(a)" class="form-control noborder"> {{a.Benefits}}</textarea>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <h3 ng-show="Recommendations.length == 0">No Information</h3>
</div>
